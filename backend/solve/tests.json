{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "bodyMatcher": "exact"
    },
    {
      "name": "Solve simple equation",
      "method": "POST",
      "path": "/",
      "body": {
        "problem": "2x + 5 = 13"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "problem": "string",
        "solution": "string",
        "model": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing problem parameter",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "bodyMatcher": "partial"
    }
  ]
}
